<header>
  <nav class="nav-container">
    <ul class="nav-list" id="lista">
      <li class="nav-item"><a href="/products?limit=10&page=1" id="cartref"><img
            src="../public/img/Astros-nav.png"
            alt="logo"
            class="logo-image"
            id="logo"
          /></a></li>
      <li class="nav-item btn"><a
          href="/products?limit=10&page=1"
          id="back-to-products"
        ><i class="fa-solid fa-backward"></i></a></li>
    </ul>
  </nav>
</header>

<form id="product-form">
  <h2>{{Head}}</h2><br />
  <div class="form-group columna-1">
    <label for="code-input">Code</label>
    <input
      type="text"
      id="code-input"
      class="form-control"
      name="code"
      required
    />
    <button class="sercher"><i
        class="fa-solid fa-magnifying-glass"
      ></i></button>

  </div>
  <div class="form-group columna-1">
    <label for="title-input">Title</label>
    <input
      type="text"
      id="title-input"
      class="form-control"
      name="title"
      required
    />
  </div>
  <div class="form-group columna-1">
    <label for="description-input">Description</label>
    <input
      type="text"
      id="description-input"
      class="form-control"
      name="description"
      required
    />
  </div>
  <div class="form-group columna-1">
    <label for="category-select">Category</label>
    <select id="category-select" class="form-control" name="category" required>
      <option value="AFA">AFA</option>
      <option value="CLUBS">CLUBS</option>
      <option value="+SELECCIONES">+SELECCIONES</option>
      <option value="RETRO">RETRO</option>
      <option value="OTROS">OTROS</option>
      <option value="PERLITAS">PERLITAS</option>
    </select>
  </div>
  <div class="form-group columna-2">
    <label for="stock-input">Stock</label>
    <input
      type="number"
      id="stock-input"
      class="form-control"
      name="stock"
      required
    />
  </div>
  <div class="form-group columna-2">
    <label for="price-input">Price</label>
    <input
      type="number"
      id="price-input"
      class="form-control"
      name="price"
      required
    />
  </div>
  <div class="form-group">
    <label for="thumbnail-input">Thumbnail URL</label><hr />
    <input
      type="text"
      id="thumbnail-input"
      class="form-control"
      name="thumbnailUrl"
      required
    />
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>

<script src="/public/js/newProduct.js" type="application/javascript"></script>