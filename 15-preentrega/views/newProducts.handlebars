<header>
  <nav class="">
    <ul class="" id="lista">
      <li class=""><a href="/products?limit=10&page=1" id="cartref"><img
            src=""
            alt="logo"
            class=""
            id="logo"
          /></a></li>
      <li class=""><a
          href="/products?limit=10&page=1"
          id="back-to-products"
        ><i class=""></i></a></li>
    </ul>
  </nav>
</header>

<form id="product-form">
  <h2>{{Head}}</h2><br />
  <div class="" id="buttoner">
    <label for="code-input">Code</label>
    <input type="text" class="" id="id-data" />
    <input type="hidden" class="" id="owner" value="{{profile}}" />
    <input
      type="text"
      id="code-input"
      class=""
      name="code"
      required
    />
    <button
      class=""
      id="sercher-btn"
      onclick="SerchProduct(document.getElementById('code-input').value,document.getElementById('owner').value)"
      type="button"
    ><i class=""></i></button>
    <button
      class=""
      id="deleter-btn"
      disabled
      onclick="delProduct(document.getElementById('id-data').value,document.getElementById('owner').value)"
      type="button"
    ><i class=""></i></button>
    <button
      class=""
      id="updater-btn"
      disabled
      onclick="updProduct(document.getElementById('owner').value)"
      type="button"
    ><i class=""></i></button>

  </div>
  <div class="">
    <label for="title-input">Title</label>
    <input
      type="text"
      id="title-input"
      class=""
      name="title"
      required
    />
  </div>
  <div class="">
    <label for="description-input">Description</label>
    <input
      type="text"
      id="description-input"
      class=""
      name="description"
      required
    />
  </div>
  <div class="">
    <label for="category-select">Category</label>
    <select id="category-select" class="" name="category" required>
      <option value="Algabo">Algabo</option>
      <option value="Otros">Otros</option>
    </select>
  </div>
  <div class="">
    <label for="stock-input">Stock</label>
    <input
      type="number"
      id="stock-input"
      class=""
      name="stock"
      required
    />
  </div>
  <div class="">
    <label for="price-input">Price</label>
    <input
      type="number"
      id=""
      class=""
      name="price"
      required
    />
  </div>
  <div class="">
    <label for="thumbnail-input">Thumbnail URL</label><hr />
    <input
      type="text"
      id="thumbnail-input"
      class=""
      name="thumbnail"
      required
    />
  </div>

  <div class="" id="buttsaver">
    <button type="submit" class="btn btn-primary" id="save">Save</button>
  </div>
</form>

<script src="/public/js/newProduct.js" type="application/javascript"></script>